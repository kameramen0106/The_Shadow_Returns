#. [message]: speaker=second_unit
#: The_Shadow_Returns/episode1/scenarios/06_Inside_the_Tower.cfg:330
msgid "A strange creature lurks here — it attacks!"
msgstr ""

#. [message]: speaker=unit
#: The_Shadow_Returns/episode1/scenarios/06_Inside_the_Tower.cfg:343
msgid "Here! A hidden door... this could be the library."
msgstr ""

#. [message]: speaker=Krimitros
